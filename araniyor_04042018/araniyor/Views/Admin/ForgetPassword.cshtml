@model araniyor.Models.Users

@{
    ViewBag.Title = "ForgetPassword";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@using (Html.BeginForm("ForgetPassword", "Admin", FormMethod.Post))
{
    <div class="card card-login mx-auto mt-5">
        <div class="card-header">Şifremi Unuttum</div>
        <div class="card-body">
            @if (TempData["mesaj"] != null)
            {
                <div class="alert alert-warning">
                    <span class="glyphicon glyphicon-search"></span>
                    @TempData["mesaj"].ToString()
                </div>
            }
            <div class="text-center mt-4 mb-5">
                <h4>Şifreni mi unuttun?</h4>
                <p>E-Posta adresini gir ve biz sana şifreni gönderelim.</p>
            </div>
            <form>
                <div class="form-group">
                    @*<input class="form-control" id="exampleInputEmail1" type="email" aria-describedby="emailHelp" placeholder="E-Posta">*@
                    @Html.TextBoxFor(a => a.eMail, new { placeholder = "Kullanıcı Adı", @class = "form-control" })
                </div>
                @*<a class="btn btn-primary btn-block" href="login.html">Parola sıfırla</a>*@
                <input type="submit" id="submitbtn" value="Parola sıfırla" class="btn btn-primary" style="width:100%" />
            </form>
            <div class="text-center">
                @*<a class="d-block small mt-3" href="~/Account/Register">Register an Account</a>*@
                <a class="d-block small" href="~/Admin/Index">Giriş Ekranı</a>
            </div>
        </div>
    </div>
}
